<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bottom_navigation_view" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemRippleColor">?colorPrimaryVariant</item>
        <item name="android:background">@drawable/bottom_nav_border</item>
        <item name="itemIconTint">@drawable/color_nav_button_selected</item>
        <item name="itemTextColor">@drawable/color_nav_button_selected</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="profile_title_item_text_view">
        <item name="android:textColor">@color/black_38</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_title_item</item>
    </style>

    <style name="profile_item_text_view">
        <item name="android:textColor">@color/black_87</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_item</item>
    </style>

    <style name="custom_text_appearance_tab_layout" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="title_font" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/officina_sans_extra_bold_scc</item>
    </style>

    <style name="default_font" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="button_font" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>


</resources>