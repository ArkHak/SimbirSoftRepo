<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="bottom_navigation_view" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemRippleColor">?colorPrimaryVariant</item>
        <item name="android:background">@drawable/bottom_nav_border</item>
        <item name="itemIconTint">@drawable/color_nav_button_selected</item>
        <item name="itemTextColor">@drawable/color_nav_button_selected</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="profile_title_item_text_view">
        <item name="android:textColor">@color/black_38</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">@dimen/text_size_title_item</item>
    </style>

    <style name="custom_text_appearance_tab_layout" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.04</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="custom_search_view" parent="Widget.AppCompat.SearchView">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="text_news_details" parent="Widget.AppCompat.SearchView">
        <item name="fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/black_70</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="clickable_green_text" parent="Widget.AppCompat.SearchView">
        <item name="fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/leaf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>


