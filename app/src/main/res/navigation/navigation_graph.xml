<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/fragment_help">

    <fragment
        android:id="@+id/fragment_help"
        android:name="o.mysin.simbirsoftappjava.ui.help.HelpFragment"
        android:label="fragment_help"
        tools:layout="@layout/fragment_help" />

    <fragment
        android:id="@+id/fragment_history"
        android:name="o.mysin.simbirsoftappjava.ui.history.HistoryFragment"
        android:label="fragment_history"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/fragment_news"
        android:name="o.mysin.simbirsoftappjava.ui.news.main.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news">
        <action
            android:id="@+id/action_fragment_news_to_filtersFragment"
            app:destination="@id/filtersFragment" />
        <action
            android:id="@+id/action_fragment_news_to_newsDetailFragment"
            app:destination="@id/newsDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/fragment_profile"
        android:name="o.mysin.simbirsoftappjava.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/fragment_search"
        android:name="o.mysin.simbirsoftappjava.ui.search.main.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/filtersFragment"
        android:name="o.mysin.simbirsoftappjava.ui.filter.FilterFragment"
        android:label="fragment_filters"
        tools:layout="@layout/fragment_filter" />
    <fragment
        android:id="@+id/newsDetailFragment"
        android:name="o.mysin.simbirsoftappjava.ui.news.detail.NewsDetailFragment"
        android:label="fragment_news_detail"
        tools:layout="@layout/fragment_news_detail">
        <argument
            android:name="newsId"
            app:argType="integer" />
    </fragment>

</navigation>