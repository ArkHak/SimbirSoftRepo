<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/authorization_graph">

    <fragment
        android:id="@+id/fragment_news"
        android:name="o.mysin.simbirsoftappjava.ui.news.main.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news">
        <action
            android:id="@+id/action_fragment_news_to_filtersFragment"
            app:destination="@id/filters_fragment" />
        <action
            android:id="@+id/action_fragment_news_to_newsDetailFragment"
            app:destination="@id/news_detail_fragment" />
    </fragment>

    <fragment
        android:id="@+id/filters_fragment"
        android:name="o.mysin.simbirsoftappjava.ui.filter.FilterFragment"
        android:label="fragment_filters"
        tools:layout="@layout/fragment_filter" />

    <fragment
        android:id="@+id/news_detail_fragment"
        android:name="o.mysin.simbirsoftappjava.ui.news.detail.NewsDetailFragment"
        android:label="fragment_news_detail"
        tools:layout="@layout/fragment_news_detail">
        <argument
            android:name="newsId"
            app:argType="integer" />
    </fragment>

    <include app:graph="@navigation/history_graph" />

    <include app:graph="@navigation/authorization_graph" />

    <include app:graph="@navigation/profile_graph" />

    <include app:graph="@navigation/help_graph" />

    <include app:graph="@navigation/search_graph" />

</navigation>